<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/adaptive_radiobtn_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/lines_seekbar_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_lines_led"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_led_text_0"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/magic_radiobtn_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_magicstyle_led"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/arrays_led_magicstyle"
        android:visibility="gone" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/content_led"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/activity_led_hint_text_1"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/fontcolor_btn_led"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/activity_led_text_2" />

                    <Button
                        android:id="@+id/bgcolor_btn_led"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/activity_led_text_3" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/reverseColor_led"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/preview_led"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/activity_led_text_4"
                        android:textSize="38dp" />
                </FrameLayout>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/showstyle_radiogroup_led"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/single_radiobtn_led"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/activity_led_text_5" />


                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/single_toss_radiobtn_led"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/activity_led_text_6" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_led_text_7" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/rollspeed_seekbar_led"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:max="10"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
            </RadioGroup>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/start_btn_led"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/activity_led_text_8" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>